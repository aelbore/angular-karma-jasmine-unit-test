{
  "compilerOptions": {
    "inlineSourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": false,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": false
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "filesGlob": [
    "src/**/*.ts",
    "node_modules/@types/**/*.d.ts"
  ]
}